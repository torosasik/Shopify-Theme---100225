{% render "otsb-logo-list-base" %}
{% schema %}
{
  "name": "OT: Logo List #2",
  "class": "otsb__root section section-collection-list x-section",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Logo list",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "%",
      "label": "Heading size",
      "default": 100
    },
    {
      "type": "select",
      "id": "heading_tag",
      "default": "h2",
      "label": "Heading tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "p",
          "label": "p"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "default": "center",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "range",
      "id": "corner_image",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Corner radius",
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show logo border",
      "default": false
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "auto",
          "label": "Natural"
        },
        {
          "value": "100",
          "label": "Square (1:1)"
        },
        {
          "value": "75",
          "label": "Landscape (4:3)"
        },
        {
          "value": "56",
          "label": "Wide (16:9)"
        },
        {
          "value": "133",
          "label": "Standard (3:4)"
        }
      ],
      "default": "56",
      "label": "Image ratio"
    },
    {
      "type": "checkbox",
      "id": "is_lazyload",
      "label": "Lazy-load images",
      "default": false
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "rgba(0,0,0,0)",
      "label": "Background"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "rgba(0,0,0,0)",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "border_color",
      "default": "rgba(0,0,0,0)",
      "label": "Line and border"
    },
    {
      "type": "header",
      "content": "Carousel"
    },
    {
      "type": "color",
      "id": "slider_button_color",
      "default": "#242424",
      "label": "Slider button"
    },
    {
      "type": "color",
      "id": "slider_button_hover_color",
      "default": "#000000",
      "label": "Slider button hover"
    },
    {
      "type": "color",
      "id": "slider_button_hover_text_color",
      "default": "#FFFFFF",
      "label": "Slider button hover text"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel_on_desktop",
      "label": "Enable carousel on desktop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "auto_switch_bar",
      "label": "Auto-switch logo",
      "default": true
    },
    {
      "type": "range",
      "id": "change_bar_every",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Change bar every",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation",
      "info": "Only applies to desktop display.",
      "default": true
    },
    {
      "type": "header",
      "content": "Desktop layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 0,
      "max": 9,
      "step": 1,
      "default": 7,
      "label": "Number of columns",
      "info": "If left 0, the number of columns on each row is automatically adjusted based on the original width of the logo images."
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Make section full width"
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "default": false,
      "label": "Show section divider"
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 0,
      "max": 40,
      "unit": "px",
      "step": 1,
      "default": 16,
      "label": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 28
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 28
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "select",
      "id": "layout_mobile",
      "options": [
        {
          "value": "carousel",
          "label": "Carousel"
        },
        {
          "value": "stacked",
          "label": "Stacked"
        }
      ],
      "default": "carousel",
      "label": "Mobile layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Number of columns",
      "info": "If left 0, the number of columns on each row is automatically adjusted based on the original width of the logo images.",
      "options": [
        {
          "value": "auto",
          "label": "Auto"
        },
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_section_divider_mobile",
      "default": false,
      "label": "Show section divider"
    },
    {
      "type": "range",
      "id": "spacing_mobile",
      "min": 0,
      "max": 40,
      "unit": "px",
      "step": 1,
      "default": 16,
      "label": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 28
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 28
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_logo",
          "label": "Logo"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "open_new_window",
          "default": false,
          "label": "Open this link in a new window"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "OT: Logo List #2",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
